{
  "name": "teachers-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "rm -rf dist && npm run build:backend && npm run build:frontend",
    "build:backend": "tsc --build typescript/backend/tsconfig.json && ts-node scripts/configure-backend.ts",
    "build:frontend": "tsc --build typescript/frontend/tsconfig.json && ts-node scripts/configure-frontend.ts",
    "build:check-dependencies": "depcruise --config .dependency-cruiser.js typescript",
    "build:sync-common": "ts-node scripts/sync-common.ts",
    "build:watch:backend": "npm-watch build:backend",
    "build:watch:frontend": "npm-watch build:frontend",
    "build:watch:common": "npm-watch build:sync-common && npm-watch build:backend && npm-watch build:frontend",
    "build:watch:check-dependencies": "npm-watch build:check-dependencies",
    "build:watch": "run-p build:watch:*",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "lint": "tslint --fix 'typescript/**/*.ts'",
    "test:backend": "mocha -r ts-node/register,typescript/backend/types/wix-types.ts 'typescript/backend/**/*.spec.ts'",
    "test:frontend": "mocha -r ts-node/register,typescript/frontend/wix-types.ts 'typescript/frontend/**/*.spec.ts'",
    "test": "npm run test:backend && npm run test:frontend && npm run build",
    "wix:pull": "npx corvid pull --override",
    "wix:editor": "npx corvid open-editor",
    "wix": "npm run wix:pull && npm run test && npm run wix:editor"
  },
  "watch": {
    "build:backend": {
      "patterns": [
        "typescript/backend"
      ],
      "extensions": "ts"
    },
    "build:frontend": {
      "patterns": [
        "typescript/frontend"
      ],
      "extensions": "ts"
    },
    "build:sync-common": {
      "patterns": [
        "typescript/common"
      ],
      "extensions": "ts"
    },
    "build:check-dependencies": {
      "patterns": [
        "typescript/backend",
        "typescript/frontend"
      ],
      "extensions": "ts"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.2.1",
    "@types/sinon-chai": "^3.2.5",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "corvid-cli": "^0.2.12",
    "corvid-types": "^0.1.125",
    "cypress": "^6.7.1",
    "del": "^6.0.0",
    "dependency-cruiser": "^9.24.0",
    "mocha": "^8.3.2",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.9.0",
    "prettier": "^2.2.1",
    "recursive-copy": "^2.0.11",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "fastest-validator": "1.10.0",
    "lodash": "4.17.21",
    "url-slug": "3.0.1",
    "uuid": "8.3.2"
  }
}
