{
  "name": "teachers-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run build:backend",
    "build:backend": "rm -rf src/backend && npm run build:compile-backend && npm run build:configure-corvid",
    "build:compile-backend": "tsc --build backend/tsconfig.json",
    "build:configure-corvid": "node ./backend-integrations/configure-corvid.js",
    "lint": "tslint --fix 'backend/**/*.ts'",
    "co": "cypress open",
    "test:unit": "mocha -r ts-node/register backend/**/*.spec.ts",
    "test": "npm run test:unit && npm run build",
    "wix:pull": "npx corvid pull --override",
    "wix:editor": "npx corvid open-editor",
    "wix": "npm run wix:pull && npm run test && npm run wix:editor"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^7.0.2",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "corvid-cli": "^0.2.9",
    "corvid-types": "^0.1.97",
    "cypress": "^4.3.0",
    "faker": "^4.1.0",
    "mocha": "^7.1.1",
    "prettier": "^2.0.4",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "fastest-validator": "^1.2.0",
    "google-auth-library": "^6.0.0",
    "lodash": "^4.17.15",
    "url-slug": "^2.3.2"
  }
}
